<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.waicool20.kaga.views.tabs.LbasTabView">
   <children>
      <Label fx:id="lbasGroup1Label" text="LBAS Group 1:" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <PrefixSelectionComboBox fx:id="grp1choice1ComboBox" backSpaceAllowed="true" displayOnFocusedEnabled="true" prefWidth="150.0" typingDelay="200" />
                  <PrefixSelectionComboBox fx:id="grp1choice2ComboBox" backSpaceAllowed="true" displayOnFocusedEnabled="true" prefWidth="150.0" typingDelay="200" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </VBox>
            <Label fx:id="grp1NodesWarnLabel" text="2 nodes required!&#10;LBAS Group 1 disabled." textAlignment="CENTER" textFill="RED" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <Label fx:id="lbasGroup2Label" text="LBAS Group 2:" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <PrefixSelectionComboBox fx:id="grp2choice1ComboBox" backSpaceAllowed="true" displayOnFocusedEnabled="true" prefWidth="150.0" typingDelay="200" />
                  <PrefixSelectionComboBox fx:id="grp2choice2ComboBox" backSpaceAllowed="true" displayOnFocusedEnabled="true" prefWidth="150.0" typingDelay="200" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </VBox>
            <Label fx:id="grp2NodesWarnLabel" text="2 nodes required!&#10;LBAS Group 2 disabled." textAlignment="CENTER" textFill="RED" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <Label fx:id="lbasGroup3Label" text="LBAS Group 3:" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <PrefixSelectionComboBox fx:id="grp3choice1ComboBox" backSpaceAllowed="true" displayOnFocusedEnabled="true" prefWidth="150.0" typingDelay="200" />
                  <PrefixSelectionComboBox fx:id="grp3choice2ComboBox" backSpaceAllowed="true" displayOnFocusedEnabled="true" prefWidth="150.0" typingDelay="200" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </VBox>
            <Label fx:id="grp3NodesWarnLabel" text="2 nodes required!&#10;LBAS Group 3 disabled." textAlignment="CENTER" textFill="RED" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
